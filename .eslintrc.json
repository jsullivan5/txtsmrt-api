{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true,
        "mongo": true
    },
    "extends": "standard",
    "globals": {
      "expect": true
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
